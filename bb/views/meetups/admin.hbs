

{{#extend "navigation"}}
  {{> navigation}}
{{/extend}}


{{> leftsidebar}}

<div class="col-sm-9 blog-main">
  {{> flash}}

  <ul class="nav nav-tabs" style="margin-bottom: 20px;">
    <li class="active">
      <a href="/admin/blog">
        <span class="glyphicon glyphicon-map-marker"></span> Meetups
      </a>
    </li>
    {{#ifCond user.role.name '==' 'Super Administrator'}}
    <li>
      <a href="/admin/meetups/settings">
        <span class="glyphicon glyphicon-cog"></span> Settings
      </a>
    </li>
    {{/ifCond}}
    <a role="button" href="/meetups/new" class="btn btn-danger pull-right">
     <span class="glyphicon glyphicon-map-marker"></span> Create a meetup
    </a>
  </ul>

  <div class="container-fluid">

    <div class="row" style="margin-top:5px;">
    {{#ifCond meetups.length '>' 0}}
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th style="text-align:center" class="active">
              ID
            </th>
            <th>
              Title
            </th>
            <th>
              City
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
              <span class="glyphicon glyphicon-eye-open"></span>
            </th>
          </tr>
        </thead>
  
        <tbody>
          {{#each meetups}}
            <tr>
              <td style="text-align:center" class="active">
                {{id}}
              </td>
              <td>
                <a href="/meetups/edit/{{id}}">{{title}}</a>
              </td>
              <td>
                {{city}}
              </td>
              <td style="text-align:center">
                <a href="/meetups/edit/{{id}}" data-toggle="tooltip" data-placement="top" title="Edit">
                  <span class="glyphicon glyphicon-pencil"></span>
                </a> 
              </td>
              <td style="text-align:center">
                <a href="#" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                  <span class="glyphicon glyphicon-trash"></span> 
                </a> 
              </td>
              <td style="text-align:center">
                {{views}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{/ifCond}}
      {{#ifCond meetups.length '==' 0}}
        <div class="alert alert-info fade in" role="alert">
          <h4>Welcome to your Meetups admin</h4>
          <p>You can start a new meetup group here or share an existing one. Let us build vibrant Node.js communities!</p>
          <p>
            <a class="btn btn-danger" href="/meetups/new">Add a Meetup group</a>
          </p>
        </div>
      {{/ifCond}}
    </div>
  
    {{> pagination}}
  </div>
</div>

{{#extend "footer"}}
  {{> footer}}
{{/extend}}